{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "person_ids"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the simulation"
    },
    "person_ids": {
      "type": "array",
      "description": "List of person IDs participating in the simulation",
      "items": {
        "type": "string"
      }
    }
  }
} 